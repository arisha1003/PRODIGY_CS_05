import socket
import platform

def sniff_packets():
    system = platform.system()

    if system == "Windows":
        sniffer = socket.socket(socket.AF_INET, socket.SOCK_RAW, socket.IPPROTO_IP)
        host = socket.gethostbyname(socket.gethostname())
        sniffer.bind((host, 0))
        sniffer.setsockopt(socket.IPPROTO_IP, socket.IP_HDRINCL, 1)
        sniffer.ioctl(socket.SIO_RCVALL, socket.RCVALL_ON)
        print(f"üîç Sniffing on Windows from {host} ... Press Ctrl+C to stop.")
    else:
        sniffer = socket.socket(socket.AF_PACKET, socket.SOCK_RAW, socket.ntohs(3))
        print("üîç Sniffing on Linux ... Press Ctrl+C to stop.")

    try:
        while True:
            raw_data, addr = sniffer.recvfrom(65565)
            print(f"[üì¶] Packet received from {addr[0]} | Bytes: {len(raw_data)}")
            print(f"     ‚Ü≥ Data: {raw_data[:60]}\n")
    except KeyboardInterrupt:
        if system == "Windows":
            sniffer.ioctl(socket.SIO_RCVALL, socket.RCVALL_OFF)
        print("\nüõë Sniffing stopped.")

if __name__ == "__main__":
    sniff_packets()
